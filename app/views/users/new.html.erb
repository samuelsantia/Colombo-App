<article class="c12 register-form">
	<h1>Registarse</h1>
	<%# TODO see client_side_validations gem to validate the form %>
	<%= form_for @user, :class => 'row' do |f| %>
		<ul>
			<li class="row">
				<div class="c6">
					<%= f.label :nick, 'Nick:', :class => 'c2 fix-m-l' %>
					<%= f.text_field :nick, :class => 'c3' %>
				</div>
				<div class="c6">
					<%= f.label :email,'Email:', :class => 'c2 fix-m-l' %>
					<%= f.email_field :email, :class => 'c3' %>
				</div>
			</li>
			<li class="row">
				<div class="c6">
					<%= f.label :name, 'Nombre:', :class => 'c2 fix-m-l' %>
					<%= f.text_field :name, :class => 'c3' %>
				</div>
				<div class="c6">
					<%= f.label :password, 'ContraseÃ±a:', :class => 'c2 fix-m-l' %>
					<%= f.password_field :password, :class => 'c3' %>
				</div>
				
			</li>
			<li class="row">
				<div class="c6">
					<%= f.label :password_confirmation, 'Confirmar contraseÃ±a:', :class => 'c2 fix-m-l' %>
					<%= f.password_field :password_confirmation, :class => 'c3' %>
				</div>
				<div class="c6">
					<%= f.submit 'Crear usuario', :class => 'btn-grey-round' %>
				</div>
			</li>
		</ul>
	<% end %>
</article>

